    <script>
        // Set current date
        const date = new Date();
        document.getElementById('currentDate').textContent = date.toLocaleDateString('en-US', { 
            weekday: 'short', 
            month: 'short', 
            day: 'numeric' 
        });

        // Simple add task function
        function addTask() {
            alert('Add Task feature coming soon!');
        }

        // Update counts periodically (simulate real data)
        function updateCounts() {
            document.getElementById('meetingsCount').textContent = 
                Math.floor(Math.random() * 3) + 2;
            document.getElementById('followupsCount').textContent = 
                Math.floor(Math.random() * 4) + 3;
            document.getElementById('leadsCount').textContent = 
                Math.floor(Math.random() * 2) + 1;
            document.getElementById('dealsCount').textContent = 
                Math.floor(Math.random() * 3) + 2;
        }

        // Update every 5 minutes
        setInterval(updateCounts, 300000);
    </script>
